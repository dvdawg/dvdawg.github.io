---
const { title, url, description, pubDate } = Astro.props;
---
<a href={url}><div class="flex flex-wrap p-2 text-truncate transition duration-[400ms] hover:bg-light-accent">
    <div class="flex-none w-5/12">
        <header class="font-bold text-xl">{title}</header>
        <h2 class="italic text-sm">{pubDate.toString().slice(4,10) + "," + pubDate.toString().slice(10,15)}</h2>
    </div>
    <div class="flex-none text-sm w-7/12 pl-6">
        <p class="pt-1.5">{description}</p>
    </div>
</div></a>
