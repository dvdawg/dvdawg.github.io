---
import Container from "./container.astro";
const menuitems = [
    { name: "home", href: "/" },
    { name: "projects", href: "/projects/"},
    { name: "blog", href: "/blog/" },
];
const pathname = Astro.url.pathname;
import { Separator } from "$lib/components/ui/separator";
const link = menuitems.find(({ href }) => pathname.startsWith(href));
---
<Container>
    <div class="flex justify-between mb-3 pb-8 pt-12"> 
        <div class="flex items-center gap-8">
            <h1 class="text-4xl font-bold"><a href="/" class="hover:text-black" >
                <span>
                    <p class="bg-scroll">dvd</p>
                    <header class="font-semibold">km</header>
                </span>
            </a></h1>
            <div class="flex items-center gap-2">
                <a href="https://github.com/dvdawg" class="hover:text-accent-color transition-colors" aria-label="GitHub">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                        <path d="M9 18c-4.51 2-5-2-7-2"/>
                    </svg>
                </a>
                <a href="mailto:davidkm@berkeley.edu" class="hover:text-accent-color transition-colors" aria-label="Email">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="20" height="16" x="2" y="4" rx="2"/>
                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                    </svg>
                </a>
            </div>
        </div>
        <nav class='text-lg place-self-center space-x-1.5 underline underline-offset-4 decoration-inherit'>
            {
                menuitems.map((link) => (
                  <a
                    href={link.href}
                    class:list={[
                      "hover:text-accent-color transition-colors",
                      { "text-accent-color": link.href === pathname },
                    ]}>
                    {link.name}
                  </a>
                ))
              }
        </nav>
    </div>
</Container>

<style>
    p {
        background-image: url(../../assets/images/dvdgradient-breathe.gif);
        background-repeat: no-repeat;
        background-size: cover;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-font-smoothing: antialiased;
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: lightgray;
        
    }

    span {
        display: inline-flex;
    }
    
    
</style>

