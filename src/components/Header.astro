---
import Container from "./container.astro";
const menuitems = [
  {
    title: "home",
    path: "/",
  },
  {
    title: "blog",
    path: "/blog/",
  },]
---
<Container>
    <div class="flex justify-between items-start mb-3 py-6">
        <a href="/" class="hover:text-black" >
            <span class="text-4xl font-semibold">
                <p class="bg-scroll">dvd</p>
                <header>km</header>
            </span>
        </a>
        <nav class='text-lg place-self-center space-x-1 text-black'>
            <a href="/">home</a>
            <a href="/about/">about</a>
            <a href="/blog/">blog</a>
        </nav>
    </div>
</Container>

<style>
    p {
        background-image: url(../../assets/images/dvdgradient.png);
        background-repeat: no-repeat;
        background-size: cover;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-font-smoothing: antialiased;
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: lightgray;
    }

    span {
        display: inline-flex;
    }
    
    nav a {
        @apply underline underline-offset-[5px] decoration-inherit !important;
        @apply hover:text-accent-color hover:decoration-accent-color transition-colors !important;
    }
    
</style>

