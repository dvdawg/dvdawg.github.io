---
import Page from '../layouts/Page.astro';
import { getCollection } from "astro:content";
import BlogPost from '../components/BlogPost.astro';
import { Separator } from "$lib/components/ui/separator";
import { Badge } from "$lib/components/ui/badge/index.js";
import { Picture } from "astro:assets";
const pageTitle = "blog"
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---
<Page pageTitle={pageTitle}>
  <div class="flex">
    <h1 class="text-3xl">Blog</h1>
  </div>
  <div class="flex flex-wrap pt-3">
    {tags.map((tag) => (
      <a href={`/tags/${tag}`} class="text-black"><Badge class='bg-accent-color hover:bg-dark-accent' variant="secondary">{tag}</Badge></a>
      <Separator orientation="vertical" class="w-1.5"/>
    ))}
  </div>
  <Separator class="by-1 h-4"/>
  <Separator class="bg-black"/>
  <Separator class="h-4"/>
  <div class="flex flex-col space-y-4">
    {
      allPosts.map((post) => (
        <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} description={post.data.description} pubDate={post.data.pubDate}/>
      ))
    }
  </div>
</Page>