---
import Page from '../layouts/Page.astro';
import { getCollection } from "astro:content";
import BlogPost from '../components/BlogPost.astro';
import { Separator } from "$lib/components/ui/separator";
import { Badge } from "$lib/components/ui/badge/index.js";
const pageTitle = "blog"
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const highlightedPost = allPosts.find((post) => post.slug === "conddispreadout");
---
<Page pageTitle={pageTitle}>
  <div class="flex justify-between items-center space-x-4 flex-wrap">
    <h1 class="text-4xl font-mono flex-none">DVD-ROM:<span class="text-dark-accent font-bold">BLOG</span></h1>
    <Separator class="bg-black self-center flex-1"/>
    <h1 class="text-2xl font-light flex-initial">Highlighted Posts</h1>
  </div>
  <!--highlighted posts section -->
  <div class="grid grid-rows-2 grid-cols-3 grid-flow-row gap-2 pt-4 h-[28rem] text-wrap">
    <!-- biiig post -->
    {highlightedPost && (
    <div class="row-span-2 col-span-2 relative overflow-hidden hover:shadow-2xl">
      <div class="absolute inset-0 bg-cover bg-center" style="background-image: url(/assets/images/blog/CondDispReadout/transmon_diag.png); filter: blur(4px);"></div>
      <a href={`/posts/${highlightedPost.slug}/`} class="relative z-10 block h-full">
      <div class='p-3 size-full'>
      <p class="text-sm">{highlightedPost.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
      <div class="absolute pb-3 pl-3 bottom-0 left-0"><h1 class="text-4xl font-mono font-bold ">{highlightedPost.data.title}</h1>
      <p class="pt-2">{highlightedPost.data.description}
      </p></div>
      </div>
    </a>
    </div>
    )}
    <!-- small posts -->
    <div class="overflow-clip break-words relative row-span-1 col-span-1 bg-center bg-cover hover:shadow-2xl" style="background-image: url(../../assets/images/purple.png)"><a href="/posts/secondpost">
      <div class='p-3 size-full'>
        <p class="text-sm">May 12, 2024</p>
        <div class="absolute pb-3 pl-3 bottom-0 left-0 text-clip"><h1 class="text-2xl font-mono font-bold ">POST 2</h1></div>
        </div>
    </div></a>
    <div class="overflow-clip break-words relative row-span-1 col-span-1 bg-center bg-cover hover:shadow-2xl" style="background-image: url(../../assets/images/purple.png)"><a href="/posts/thirdpost">
      <div class='p-3 size-full'>
        <p class="text-sm">May 12, 2024</p>
        <div class="absolute pb-3 pl-3 bottom-0 left-0"><h1 class="text-2xl font-mono font-bold ">POST 3</h1></div>
        </div>
    </div></a>
  </div>
  <!-- all posts section -->
  <Separator class="by-1 h-20"/>
  <div class="flex justify-between items-center space-x-4 flex-wrap">
    <h1 class="text-2xl font-light flex-initial">All Posts</h1>
    <Separator class="bg-black self-center flex-1"/>
    <h1>{allPosts.length} posts</h1>
  </div>
  <!-- tags -->
  <div class="flex flex-wrap pt-3 pb-3">
    {tags.map((tag) => (
      <a href={`/tags/${tag}`} class="text-black"><Badge class='bg-accent-color transition duration-[400ms] hover:bg-dark-accent' variant="secondary">{tag}</Badge></a>
      <Separator orientation="vertical" class="w-1.5"/>
    ))}
  </div>
  <!-- posts list -->
  <div class="flex flex-col space-y-4">
    {
      allPosts.map((post) => (
        <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} description={post.data.description} pubDate={post.data.pubDate}/>
      ))
    }
  </div>
</Page>